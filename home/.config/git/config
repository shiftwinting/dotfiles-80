[merge]
    tool = conflictmarker
    conflictstyle = diff3
[mergetool "vimdiff4"]
    cmd = $EDITOR -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "fugitive"]
    cmd = $EDITOR -c "Gvdiffsplit!" "$MERGED"
[mergetool "conflictmarker"]
    cmd = $EDITOR "$MERGED"

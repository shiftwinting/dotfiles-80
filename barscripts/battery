#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null && notify-send "üîã Battery module" "üîã: discharging
‚èπ: not charging
‚ôª: stagnant charge
‚ö°: charging
‚ö°: charged
‚ùó: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/BAT0/capacity) || exit
status=$(cat /sys/class/power_supply/BAT0/status)

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffff00"
elif [ "$capacity" -ge 25 ]; then
	color="#ffa500"
else
	color="#ff0000"
	warn="‚ùó"
        [ "$status" != "Charging" ] && notify-send -u critical "Battery critically low"
fi

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf "<span color='%s'>%s%s%s</span>\n" "$color" "$(echo "$status" | sed -e "s/,//;s/Discharging/‚èπ/;s/Not Charging/‚èπ/;s/Charging/‚ö°/;s/Unknown/‚ôªÔ∏è/;s/Full/‚ö°/;s/ 0*/ /g;s/ :/ /g")" "$warn" "$(echo "$capacity" | sed -e 's/$/%/')"
